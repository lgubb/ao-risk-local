# Backend environment variables 

# Required in production. Change this and keep it secret.
SECRET_KEY=change-me

# Toggle authentication-protected routes
# false for local demos; true in production
AUTH_REQUIRED=false

# JWT settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Ollama / LLM settings
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:1.5b-instruct
OLLAMA_KEEP_ALIVE=5m
OLLAMA_TEMPERATURE=0.1

# Debug utilities (optional)
# DEBUG_CHUNKER=0
